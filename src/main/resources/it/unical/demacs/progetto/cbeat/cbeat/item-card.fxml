<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<Pane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="it.unical.demacs.progetto.cbeat.cbeat.controller.ItemCardController">
   <children>
      <ImageView fx:id="itemImage" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
      </ImageView>
      <BorderPane prefHeight="200.0" prefWidth="200.0" styleClass="item-card" stylesheets="@css/style.css">
         <bottom>
            <Label fx:id="itemLabel" styleClass="item-card" text="Label" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" />
               </BorderPane.margin>
            </Label>
         </bottom>
         <top>
            <Button fx:id="addButton" mnemonicParsing="false" onMouseClicked="#showInfo" text="+" BorderPane.alignment="CENTER_RIGHT">
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </Button>
         </top>
      </BorderPane>
   </children>
</Pane>
